<div class="container mt-5">
    <%= form_with(model: @product, class: "form-") do |f| %>
        <%= f.label :Name %>
        <%= f.text_field :name, class: "form-control", value: @product.name %>

         <%= f.label :description %>
        <%= f.text_field :description, class: "form-control", value: @product.description %>


        <%= f.label :Price %>
        <%= f.text_field :price, class: "form-control", value: @product.price %>

        <%= f.submit "Update Product", class: "btn btn-primary mt-3" %>
    <% end %>
</div>
